<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SearchView
        android:id="@+id/search"
        android:layout_width="310dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="15dp"
        android:text="Name"
        android:inputType="text" />

    <ImageView
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/setting"
        android:layout_alignTop="@+id/search"
        android:layout_toRightOf="@+id/search"
        android:layout_toEndOf="@+id/search"/>




        <ImageView
            android:id="@+id/sejong"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="175dp"
            android:layout_below="@+id/search"
            android:src="@drawable/sejong_logo"/>


    <TableRow
        android:id="@+id/table1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sejong"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="상세정보"
                android:textColor="#777777"
                android:textSize="8pt"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/STAR"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/star1" />

        </LinearLayout>

    </TableRow>

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_below="@id/table1"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/scrollView1">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="입학정보 : 대학교 입학처, 대학원 입학처\n\n
학사정보 : 학과전공, 학사일정, 증명서발급\n\n
부속기관 : 도서관, 글로벌지식평생교육원, 국제교육원, 취업센터\n\n
학교정보 : 세종대학교대학원\n\n
주소 : 서울특별시 광진구 능동로 209\n\n
교통 : 7호선 어린이대공원역\n\n
전화 : 02-3408-3114" />
    </ScrollView>


</RelativeLayout>